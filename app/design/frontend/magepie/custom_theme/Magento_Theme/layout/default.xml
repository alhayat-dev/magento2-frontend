<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceBlock name="store_language" remove="true" />
        <referenceBlock name="currency" remove="true" />
        <referenceBlock name="header.links" remove="true" />
        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Template" name="top_bar" as="top_bar" template="Magento_Theme::header/top_bar.phtml">
                <block class="Magento\Framework\View\Element\Template" name="left_top_bar" as="left_top_bar"
                       template="Magento_Theme::header/top-bar/left.phtml">
                </block>
                <block class="Magento\Framework\View\Element\Template" name="right_top_bar" as="right_top_bar"
                       template="Magento_Theme::header/top-bar/right.phtml">
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
